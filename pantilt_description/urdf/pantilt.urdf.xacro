<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="pantilt">

    <!-- Load Simulated or Real Hardware Interfaces -->
    <xacro:arg name="is_sim" default="true"/>

    <!-- Include Gazebo Parameters -->
    <xacro:include filename="$(find pantilt_description)/urdf/pantilt_gazebo.xacro" />

    <!-- Include ros2_control Plugins -->
    <xacro:include filename="$(find pantilt_description)/urdf/pantilt_ros2_control.xacro" />

     <!-- Include camera -->
    <xacro:include filename="$(find pantilt_description)/urdf/pantilt_camera.xacro" />
      
    <!-- Useful XACRO Variables (Properties) -->
    <xacro:property name="PI" value="3.14159265359" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />

    <!-- Useful Macros -->
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="${mass}" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0" />
        </inertial>
    </xacro:macro>
    <xacro:macro name="default_transmission" params="number">
        <transmission name="transmission_${number}">
            <plugin>transmission_interface/SimpleTransmission</plugin>
            <actuator name="motor_${number}" role="actuator1"/>
            <joint name="joint_${number}"    role="joint1">
                <mechanical_reduction>1.0</mechanical_reduction>
            </joint>
        </transmission>
    </xacro:macro>
    <material name="grey">
        <color rgba="0.7 0.7 0.7 1" />
    </material>

    <material name="green">
        <color rgba="0 0.6 0 1" />
    </material>
    
    <material name="white">
        <color rgba="1 1 1 1"/>

    </material>
        <material name="black">
        <color rgba="0 0 0 0"/>
    </material>


    <!-- Links -->
    <link name="world"/>

    <link name="base_link">
        <xacro:default_inertial mass="1.0"/>
        <visual>
            <material name="grey">
            </material>
            <origin xyz="0 0 0.00"/>
            <geometry>
                <mesh filename="package://pantilt_description/meshes/base_cylinder.stl" scale ="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.00"/>
            <geometry>
                <mesh filename="package://pantilt_description/meshes/base_cylinder.stl" scale ="0.001 0.001 0.001"/>
            </geometry>
        </collision>
     </link>

    <link name="platform">
        <xacro:default_inertial mass="0.1"/>
        <visual>
            <origin xyz="0 0 0"/>
            <material name="green"/>
            <geometry>         
                <mesh filename="package://pantilt_description/meshes/top_plate.stl" scale ="0.001 0.001 0.001"/>
            </geometry>
            </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://pantilt_description/meshes/top_plate.stl" scale ="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <link name="lower_arm">
        <xacro:default_inertial mass="0.1"/>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
            <geometry>
                <mesh filename="package://pantilt_description/meshes/lower_arm.stl" scale ="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://pantilt_description/meshes/lower_arm.stl" scale ="0.001 0.001 0.001"/>
            </geometry>          
        </collision>
    </link>


    
    <!-- Joints -->  
    <joint name="virtual_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint> 



    <joint name="joint_1" type="revolute">
        <axis xyz="0 0 1" />
        <!-- <limit effort="1000.0" lower="1.56" upper="4.68" velocity="1.0" /> -->
        <limit lower="-${PI / 2}" upper="${PI / 2}" 
               effort="${effort}" velocity="${velocity}"/>
        <parent link="base_link"/>
        <child link="platform"/>
        <origin rpy="0 0 1.5" xyz="0 0 0.048"/>
    </joint>

    <joint name="joint_2" type="revolute">
        <axis xyz="1 0 0" />
        <!-- <limit effort="1000.0" lower="0.0" upper="3.12" velocity="1.0" /> -->
        <limit lower="-${PI / 2}" upper="${PI / 2}" 
               effort="${effort}" velocity="${velocity}"/>
        <parent link="platform"/>
        <child link="lower_arm"/>
        <origin xyz="0 0.019 0.0275"/>
    </joint>

    <!-- Transmissions-->
    <xacro:default_transmission number="1"/>
    <xacro:default_transmission number="2"/>


</robot>
